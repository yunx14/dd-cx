        <a href="#go-somewhere" class="inverted">Log in</a>
      </li>
    </ul>
  </nav>

  <div class="logo-container">
    <a href="#go-home" class="logo">
      <img src="../../images/logo-unbounded-alternate-reversed.png" srcset="../../images/logo-unbounded-alternate-reversed.svg" alt="Delta Dental Logo" width="205px">
    </a>
  </div>
</header>

<main>
  <section>

    <header class="section-heading">
      <h1>Find a Dentist</h1>
      <p><a>Log in</a> to find dentists in your plan.</p>
    </header>

    <form action="directory-search.html" method="post" id='address_form' autocomplete="off">
      <label for="location">Near</label>

      <input id="location" type="text" name="location" placeholder="Zip code, city, or address">

      <label for="distance">Distance</label>
      <select name="distance" id="distance">
        <option value="5" title="Within 5 Miles">Within 5 Miles</option>
        <option value="10" title="Within 10 Miles">Within 10 Miles</option>
        <option value="15" title="Within 15 Miles">Within 15 Miles</option>
        <option value="25" title="Within 25 Miles">Within 25 Miles</option>
        <option value="35" title="Within 35 Miles">Within 35 Miles</option>
        <option value="60" title="Within 60 Miles" selected="selected">Within 60 Miles</option>
      </select>

      <button class="btn--primary" type="submit">
        View Dentists
      </button>

    </form>

    {{#if provider }} <!-- if results are returned back from the search -->
      <ul class="provider-list">
        {{#each provider }} <!-- for each provider -->
          <li class="provider-listing">
            <article>
              <aside>

                <div class="provider__distance">
                  <i class="icon  icon-map-marker" aria-label=""></i>
                  <span>{{distance}}</span>
                </div>

                <div class="provider__link">
                  <a href="{{provider.link}}">View <i class="icon icon-right-arrow" aria-label="right arrow"></i></a>
                </div>

              </aside>

              <section>

                <header class="provider__name">
                  <h5>{{name.first}} {{name.last}}</h5>
                  <p class="provider__specialty">{{speciality}}</p>
                </header>


                <div class="provider__network">
                  {{#if inNetwork}}
                    <i class="icon icon-check-circle" aria-label=""></i>
                  {{else}}
                    <i class="icon icon-check-warning" aria-label=""></i>
                  {{/if}}
                  In network

                  <p><i class="icon icon-check-circle" aria-label=""></i> Accepting new patients</p>
                </div>

                <div class="provider__address-name">{{location}}</div>
                <ul>
                  {{#each addresses}}
                    <div class="provider__address">Address: {{address}}, {{city}}, {{state}} {{zip}}</div>
                    <div class="provider__phone">Phone: {{phone}}</div>
                  {{/each}}
                </ul>
                <!-- div class="provider__address">--address--</div -->

              </section>
            </article>
          </li>
        {{/each}}
      </ul>
    {{/if}}

  </section>
</main>

